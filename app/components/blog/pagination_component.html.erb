<nav aria-label="<%= t('blog.pagination.label') %>" class="flex items-center justify-center gap-1 mt-8">
  <%# Previous button %>
  <% if collection.first_page? %>
    <span class="px-3 py-2 text-[var(--text-muted)] cursor-not-allowed">
      <span class="icon-[tabler--chevron-left] size-5"></span>
    </span>
  <% else %>
    <a href="<%= previous_url %>"
       class="px-3 py-2 rounded-lg text-[var(--text-secondary)] hover:bg-[var(--bg-secondary)] transition-colors"
       aria-label="<%= t('blog.pagination.previous') %>">
      <span class="icon-[tabler--chevron-left] size-5"></span>
    </a>
  <% end %>

  <%# Page numbers %>
  <% collection.page_range.each do |page| %>
    <% if page == collection.current_page %>
      <span class="px-4 py-2 rounded-lg bg-gold-500 text-neutral-950 font-medium"
            aria-current="page">
        <%= page %>
      </span>
    <% else %>
      <a href="<%= page_url(page) %>"
         class="px-4 py-2 rounded-lg text-[var(--text-secondary)] hover:bg-[var(--bg-secondary)] transition-colors">
        <%= page %>
      </a>
    <% end %>
  <% end %>

  <%# Next button %>
  <% if collection.last_page? %>
    <span class="px-3 py-2 text-[var(--text-muted)] cursor-not-allowed">
      <span class="icon-[tabler--chevron-right] size-5"></span>
    </span>
  <% else %>
    <a href="<%= next_url %>"
       class="px-3 py-2 rounded-lg text-[var(--text-secondary)] hover:bg-[var(--bg-secondary)] transition-colors"
       aria-label="<%= t('blog.pagination.next') %>">
      <span class="icon-[tabler--chevron-right] size-5"></span>
    </a>
  <% end %>
</nav>

<p class="text-center text-sm text-[var(--text-muted)] mt-4">
  <%= t('blog.pagination.showing',
        start: ((collection.current_page - 1) * collection.per_page) + 1,
        end: [collection.current_page * collection.per_page, collection.total_count].min,
        total: collection.total_count) %>
</p>
