<article class="max-w-none">
  <header class="mb-8 pb-8 border-b border-[var(--border-primary)]">
    <h1 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-4">
      <%= post.title %>
    </h1>

    <div class="flex flex-wrap items-center gap-4 text-sm text-[var(--text-muted)] mb-4">
      <% if author %>
        <a href="<%= author_path(author) %>" class="flex items-center gap-2 hover:text-gold-500 transition-colors">
          <span class="icon-[tabler--user] size-4"></span>
          <%= author.name %>
        </a>
      <% end %>
      <time datetime="<%= post.published_at.iso8601 %>" class="flex items-center gap-2">
        <span class="icon-[tabler--calendar] size-4"></span>
        <%= I18n.l(post.published_at, format: :long) %>
      </time>
      <span class="flex items-center gap-2">
        <span class="icon-[tabler--clock] size-4"></span>
        <%= t('blog.posts.reading_time', count: post.reading_time) %>
      </span>
    </div>

    <% if post.tags.any? %>
      <div class="flex flex-wrap gap-2">
        <% post.tags.each do |tag| %>
          <%= render Blog::TagBadgeComponent.new(tag: tag, linked: true) %>
        <% end %>
      </div>
    <% end %>
  </header>

  <div class="prose-blog">
    <%= post.content_html %>
  </div>

  <footer class="mt-12 pt-8 border-t border-[var(--border-primary)]">
    <% if author %>
      <%= render Blog::AuthorCardComponent.new(author: author) %>
    <% end %>
  </footer>
</article>
