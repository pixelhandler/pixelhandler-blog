<div class="space-y-6">
  <% if show_search %>
    <%# Search box - navigates to posts page with search query %>
    <div class="card">
      <form action="<%= posts_path %>" method="get">
        <label for="sidebar-search" class="sr-only"><%= t('blog.search.placeholder') %></label>
        <div class="relative">
          <span class="absolute left-3 top-1/2 -translate-y-1/2 text-[var(--text-muted)]">
            <span class="icon-[tabler--search] size-4"></span>
          </span>
          <input type="text"
                 id="sidebar-search"
                 name="search"
                 placeholder="<%= t('blog.search.placeholder') %>"
                 class="w-full pl-9 pr-4 py-2 rounded-lg border border-[var(--border-primary)] bg-[var(--bg-primary)] text-[var(--text-primary)] placeholder-[var(--text-muted)] focus:outline-none focus:ring-2 focus:ring-gold-500 focus:border-transparent">
        </div>
      </form>
    </div>
  <% end %>

  <% if tags.any? %>
    <%= render Blog::TagListComponent.new(tags: tags, title: t('blog.tags.popular')) %>
  <% end %>

  <% if show_about && author %>
    <%= render Blog::AuthorCardComponent.new(author: author) %>
  <% end %>

  <%# RSS Feed link %>
  <div class="card">
    <a href="<%= feed_path(format: :xml) %>"
       class="flex items-center gap-2 text-[var(--text-secondary)] hover:text-gold-500 transition-colors">
      <span class="icon-[tabler--rss] size-5"></span>
      <%= t('blog.feed.subscribe') %>
    </a>
  </div>
</div>
