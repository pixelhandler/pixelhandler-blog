<div class="card">
  <% if title %>
    <h3 class="text-lg font-semibold text-[var(--text-primary)] mb-4">
      <%= title %>
    </h3>
  <% end %>

  <div class="flex flex-wrap gap-2">
    <% tags.each do |tag| %>
      <%= render Blog::TagBadgeComponent.new(tag: tag, linked: true, count: tag.post_count) %>
    <% end %>
  </div>

  <% if tags.size > 0 %>
    <div class="mt-4 pt-4 border-t border-[var(--border-primary)]">
      <a href="<%= tags_path %>" class="text-sm text-[var(--link-color)] hover:text-[var(--link-hover)] flex items-center gap-1">
        <%= t('blog.tags.view_all') %>
        <span class="icon-[tabler--arrow-right] size-4"></span>
      </a>
    </div>
  <% end %>
</div>
