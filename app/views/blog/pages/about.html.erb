<% content_for :title, t('blog.about.title') %>
<% content_for :meta_description, t('blog.about.meta_description') %>

<%= render Blog::LayoutComponent.new do |c| %>
  <% c.with_sidebar do %>
    <%= render Blog::SidebarComponent.new(tags: @tags, show_about: false) %>
  <% end %>

  <article class="max-w-none">
    <div class="card mb-8">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
        <img src="https://s.gravatar.com/avatar/201e47df9aaf250e6aa21fd2fbe6b287?s=200&r=g"
             alt="Billy Heaton"
             class="size-40 rounded-full object-cover">

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl font-bold text-[var(--text-primary)] mb-2">
            <%= t('blog.about.heading') %>
          </h1>
          <p class="text-xl text-[var(--text-secondary)] mb-4">
            <%= t('blog.about.tagline') %>
          </p>

          <div class="flex items-center justify-center md:justify-start gap-4">
            <a href="https://www.linkedin.com/in/billyheaton/"
               target="_blank"
               rel="noopener noreferrer"
               class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gold-500 text-neutral-950 font-medium hover:bg-gold-600 transition-colors">
              <span class="icon-[tabler--brand-linkedin] size-5"></span>
              LinkedIn
            </a>
            <a href="https://github.com/pixelhandler"
               target="_blank"
               rel="noopener noreferrer"
               class="flex items-center gap-2 px-4 py-2 rounded-lg border border-[var(--border-primary)] text-[var(--text-secondary)] hover:bg-[var(--bg-secondary)] transition-colors">
              <span class="icon-[tabler--brand-github] size-5"></span>
              GitHub
            </a>
            <a href="https://x.com/pixelhandler"
               target="_blank"
               rel="noopener noreferrer"
               class="flex items-center gap-2 px-4 py-2 rounded-lg border border-[var(--border-primary)] text-[var(--text-secondary)] hover:bg-[var(--bg-secondary)] transition-colors">
              <span class="icon-[tabler--brand-x] size-5"></span>
              X
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="prose-blog">
      <h2><%= t('blog.about.bio_title') %></h2>
      <p>
        <%= t('blog.about.bio_text') %>
      </p>

      <h2><%= t('blog.about.skills_title') %></h2>
      <ul>
        <li><strong>Languages:</strong> Ruby, JavaScript, TypeScript, HTML, CSS</li>
        <li><strong>Frameworks:</strong> Ruby on Rails, Ember.js, React, Stimulus</li>
        <li><strong>Tools:</strong> Git, Docker, PostgreSQL, Redis</li>
        <li><strong>Interests:</strong> API Design, JSON:API, Web Components, Performance Optimization</li>
      </ul>

      <h2><%= t('blog.about.contact_title') %></h2>
      <p>
        <%= t('blog.about.contact_text_html').html_safe %>
      </p>
    </div>
  </article>
<% end %>
