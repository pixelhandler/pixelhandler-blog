<% content_for :title, t('blog.tags.index_title') %>

<div class="max-w-4xl mx-auto">
  <h1 class="text-3xl font-bold text-[var(--text-primary)] mb-8">
    <%= t('blog.tags.all_tags') %>
  </h1>

  <% if @tags.any? %>
    <div class="card">
      <div class="flex flex-wrap gap-3">
        <% @tags.each do |tag| %>
          <%= render Blog::TagBadgeComponent.new(tag: tag, linked: true, count: tag.post_count) %>
        <% end %>
      </div>
    </div>

    <div class="mt-8 text-sm text-[var(--text-muted)]">
      <%= t('blog.tags.total_count', count: @tags.size) %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <span class="icon-[tabler--tags] size-12 text-[var(--text-muted)] mx-auto block mb-4"></span>
      <p class="text-[var(--text-muted)]"><%= t('blog.tags.no_tags') %></p>
    </div>
  <% end %>
</div>
